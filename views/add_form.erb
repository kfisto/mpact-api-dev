<!DOCTYPE html>
<html>
<head>

<script src="/jquery-2.1.1.min.js" type="text/javascript"></script>

<script>

function getUrlParam(param) {
	var url = window.location.search.substring(1); 	// url after '?'
	var params = url.split('&');
	for (var i=0,len=params.length; i < len; i++) {
		var kvp = params[i].split('=');
		if (kvp[0] == param) {
			return decodeURIComponent(kvp[1]);
		}
	}
	return null;
}

function hideMessage() {
	$('#msgline').fadeTo(500, 0);
}

$(document).ready(function() {

	var added = getUrlParam('added'),
		error = getUrlParam('error');

	$('#msgline').hide();

	if (added !== null) {
		$('#msgline').html("Entry " + added + " added!");

		var initialTop = document.body.scrollHeight + 20 + 1,					// scroll height + top padding + 1 for good measure
			newTop = document.body.scrollHeight - $('#msgline').outerHeight() - 15 - 1; 	// initial top - outer height - top padding - 15 - 1;

		$('#msgline').show();
		$('#msgline').offset({ left: 15, top: initialTop });
		$('#msgline').fadeTo(0,0);
		$('#msgline').animate({
			opacity: 1,
			top: newTop
		}, 500);
		setTimeout("hideMessage()", 7000);
	}

	if (error !== null) {
		$('#msgline').html(error);

		var initialTop = document.body.scrollHeight + 20 + 1,					// scroll height + top padding + 1 for good measure
			newTop = document.body.scrollHeight - $('#msgline').outerHeight() - 15 - 1; 	// initial top - outer height - top padding - 15 - 1;

		$('#msgline').show();
		$('#msgline').offset({ left: 15, top: initialTop });
		$('#msgline').fadeTo(0,0);
		$('#msgline').animate({
			opacity: 1,
			top: newTop
		}, 500);
		setTimeout("hideMessage()", 7000);
	}

});



</script>

<style>
html,body {
	font-family: Helvetica,Arial,sans-serif;
	font-size: .9em;
}
form {
	width: 400px;
}
label {
	display: inline-block;
	width: 100px;
	text-align: right;
}
input[type="submit"],input[type="reset"] {
	float: right;
	min-width: 75px;
}

#msgline {
	position: absolute;
	min-width: 200px;
	border-radius: 20px;
	color: white;
	background-color: #323232;
	padding: 10px 20px;
}

</style>

</head>
<body>
<form action="/guide/<%= params[:key] %>/entry" method="post" enctype="multipart/form-data">

	<label for="name">Name</label>
	<input id="name" name="name"/><br/>

	<label for="image">Photo</label>
	<input id="image" name="image" size="20" /><br/>

	<label for="datafile">Data File</label>
	<input type="file" name="datafile"/>

	<textarea id="dfcontent" name="dfcontent" rows="6" cols="75"></textarea>

	<br/><br/>
	<input type="submit" value="Add" />
	<input type="reset"/>
</form>

<div id="msgline"></div>

</body>
</html>



